<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
	   	        
	    
    	
	    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart1"
         android:layout_height="90dp"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_marginTop="4dp"
        android:clickable="true" />
	
    	<LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="7"
        android:orientation="vertical" >
	         <TextView
		        android:id="@+id/list_item_generico_LblTitulo"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="@+id/label"
		        android:textSize="16sp"
		        android:textColor="@color/primary_text"
		     >
		    </TextView>

		    <TextView
		        android:id="@+id/list_item_generico_LblSubTitulo"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="@+id/label"
		        android:textSize="12sp"
		        android:textColor="@color/secondary_text" >
		    </TextView>


			<LinearLayout
				android:layout_marginTop="0dp"
				android:layout_width="70dp"
				android:layout_height="70dp"
				android:orientation="horizontal"
				android:layout_gravity="right">
				
				<ImageView
					android:id="@+id/list_item_generico_ivfoto"
					android:layout_height="30dp"
					android:layout_width="30dp"
					android:scaleType="centerInside"
					android:contentDescription="@string/list_item_generico_noImage"
					android:src="@drawable/no"
					android:layout_gravity="end">
				</ImageView>
				<ImageView
					android:id="@+id/list_item_generico_detalle"
					android:layout_height="40dp"
					android:layout_width="40dp"
					android:scaleType="centerInside"
					android:contentDescription="@string/list_item_generico_noImage"
					android:src="@drawable/no"
					android:layout_gravity="end">
				</ImageView>


			</LinearLayout>

		</LinearLayout>


</LinearLayout>
