<resources>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
   <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar" >
        <!-- customize the color palette -->
	    <item name="colorPrimary">@color/primary</item>
	    <item name="colorPrimaryDark">@color/primary_dark</item>
   </style>
   <style name="AttributeGroupListBackground" >
        <item name="android:orientation">vertical</item>
         <item name="android:padding">10dp</item>
         <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
	<style name="AttributeListBackground" >
	    <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
	<style name="AttributeListItemBackground" parent="AttributeListBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="AttributeListItemTitle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
    <style name="Attribute" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">4</item>
        <item name="android:minHeight">14dp</item>
         <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
	<style name="AttributeValue"  parent="Attribute"   >
        <item name="android:layout_weight">6</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    
</resources>
