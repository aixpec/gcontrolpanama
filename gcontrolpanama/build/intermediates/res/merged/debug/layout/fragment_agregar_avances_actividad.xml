<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<!--style="@style/AttributeGroupListBackground">-->
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

				<LinearLayout
				    style="@style/AttributeListItemBackground"
				    android:layout_marginBottom="0dp"
				    android:layout_marginTop="10dp">

				    <TextView
				        android:id="@+id/tvTitle3fs"
				        style="@style/Attribute"
				        android:layout_weight="2"			        
				        android:text="@string/fragment_agregar_avances_renglon_0"/>

			        <TextView
				        android:id="@+id/tv_fragAgregarAvancesRenglon_CantidadContratada"
				        style="@style/AttributeValue" 	
				        android:layout_weight="1"	
				        android:gravity="end"
				        android:textColor="@color/primary_text"		        
				        android:text="@+id/label"/>
			  		<TextView
				        android:id="@+id/tv_fragAgregarAvancesRenglon_Space"
				        style="@style/AttributeValue" 				        
				        android:text=""
				        android:gravity="end"
				        android:textColor="@color/graphGreen"
				        android:layout_weight="1"/>		
				</LinearLayout>
				<LinearLayout
				    style="@style/AttributeListItemBackground"
				    android:layout_marginBottom="0dp">
				    <TextView
				        android:id="@+id/tvTitle5fs"
				        style="@style/Attribute"
				        android:text="@string/fragment_agregar_avances_renglon_1"
						android:layout_weight="2"/>
			        <TextView
				        android:id="@+id/tv_fragAgregarAvancesRenglon_CantidadEjecutada"
				        style="@style/AttributeValue" 				        
				        android:text="@+id/label"
				        android:textColor="@color/primary_text"
				        android:gravity="end"
				        android:layout_weight="1"/>
			          <TextView
				        android:id="@+id/tv_fragAgregarAvancesRenglon_PorcCantidadEjecutada"
				        style="@style/AttributeValue" 				        
				        android:text="@+id/label"
				        android:gravity="end"
				        android:textColor="@color/graphGreen"
				        android:layout_weight="1"/>		
				</LinearLayout>
				<LinearLayout
				    style="@style/AttributeListItemBackground"
				    android:layout_marginBottom="0dp">
				    <TextView
				        android:id="@+id/tvTitle0fs"
				        style="@style/Attribute"
				        android:text="@string/fragment_agregar_avances_renglon_3"
				        android:layout_weight="2"/>
			        <TextView
				        android:id="@+id/tv_fragAgregarAvancesRenglon_CantidadPorEjecutar" 
				        style="@style/AttributeValue" 				        
				        android:text="@+id/label"
				        android:textColor="@color/primary_text"
				        android:gravity="end"
				        android:layout_weight="1"/>	
			        <TextView
			        android:id="@+id/tv_fragAgregarAvancesRenglon_PorcCantidadPorEjecutar" 
			        style="@style/AttributeValue" 				        
			        android:text="@+id/label"
			        android:gravity="end"
			        android:textColor="@color/graphGreen" 
			        android:layout_weight="1"/>
				</LinearLayout>
				<LinearLayout
					style="@style/AttributeListItemBackground"
					android:layout_marginBottom="0dp">
					<TextView
						android:id="@+id/tvTitle6fs"
						style="@style/Attribute"
						android:text="@string/fragment_agregar_avances_renglon_10"
						android:layout_weight="2"/>
					<TextView
						android:id="@+id/tv_fragAgregarAvancesRenglon_CantidadExcedente"
						style="@style/AttributeValue"
						android:text="@+id/label"
						android:textColor="@color/primary_text"
						android:gravity="end"
						android:layout_weight="1"/>
					<TextView
						android:id="@+id/tv_fragAgregarAvancesRenglon_PorcCantidadExcedente"
						style="@style/AttributeValue"
						android:text="@+id/label"
						android:gravity="end"
						android:textColor="@color/graphRed"
						android:layout_weight="1"/>
				</LinearLayout>
				<LinearLayout
				    style="@style/AttributeListItemBackground"
				    android:layout_marginBottom="0dp">
				    <TextView
				        android:id="@+id/tvEtiquetaAgregarAvances"
				        style="@style/Attribute"
				        android:textColor="@color/primary_text"
				        android:text="@string/fragment_agregar_avances_renglon_4"
				        android:layout_weight="2"/>
					<EditText
				        android:id="@+id/et_fragAgregarAvancesRenglon_NuevoAvance"
				        style="@style/AttributeValue" 
				        android:text=""
				        android:inputType="numberDecimal"
				        android:layout_weight="1"
						android:gravity="end"/>
					<TextView
						android:id="@+id/et_fragAgregarAvancesEtiquetaPorc"
						style="@style/AttributeValue"
						android:text=""
						android:layout_weight="1"
						android:gravity="end"/>
				</LinearLayout>

				<LinearLayout
					style="@style/AttributeListItemBackground"
					android:layout_marginBottom="0dp"
					android:layout_marginTop="10dp">
						<TextView
							android:id="@+id/tvTitle2fs"
							style="@style/Attribute"
							android:text="@string/fragment_agregar_avances_renglon_2"
							android:layout_weight="2"/>
						 <TextView
							android:id="@+id/tv_fragAgregarAvancesRenglon_FechaActualizo"
							style="@style/AttributeValue"
							android:textSize="12sp"
							android:textColor="@color/secondary_text"
							android:text="@+id/label"
							android:gravity="end"
							android:layout_weight="1"
							/>
					</LinearLayout>
				<LinearLayout
						style="@style/AttributeListItemBackground"
						android:layout_marginBottom="0dp"
						android:layout_marginTop="10dp">

						<TextView
							android:id="@+id/tv_fragAgregarAvancesRenglon_Actividad"
							style="@style/AttributeValue"
							android:layout_weight="1"
							android:gravity="left"
							android:textColor="@color/primary_text"
							android:text="@+id/label"/>
					</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
